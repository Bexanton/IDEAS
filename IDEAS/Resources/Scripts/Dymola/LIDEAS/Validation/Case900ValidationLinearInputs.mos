removePlots();
// --------------- Linearization and save matrices into ssm.mat --------------------------------
// Remove CPU to avoid additional output
OutputCPUtime:=false;
// linearise model and save results in 're'
re=Modelica_LinearSystems2.ModelAnalysis.Linearize("IDEAS.LIDEAS.Validation.Case900LineariseInputs");
// extract state space matrices from 're' and save them to a mat file in the current working directory
writeMatrix(fileName="ssm_Case900LineariseInputs.mat",matrixName="A",matrix=re.A);
writeMatrix(fileName="ssm_Case900LineariseInputs.mat",matrixName="B",matrix=re.B, append=true);
writeMatrix(fileName="ssm_Case900LineariseInputs.mat",matrixName="C",matrix=re.C, append=true);
writeMatrix(fileName="ssm_Case900LineariseInputs.mat",matrixName="D",matrix=re.D, append=true);
// save the variable names of the inputs, outputs and states in the current working directory
Modelica.Utilities.Files.remove("uNames_Case900LineariseInputs.txt");
for i in 1:size(re.uNames,1) loop Modelica.Utilities.Streams.print(re.uNames[i], "uNames_Case900LineariseInputs.txt"); end for;
Modelica.Utilities.Files.remove("y_NamesCase900LineariseInputs.txt");
for i in 1:size(re.yNames,1) loop Modelica.Utilities.Streams.print(re.yNames[i], "yNames_Case900LineariseInputs.txt"); end for;
Modelica.Utilities.Files.remove("xNames_Case900LineariseInputs.txt");
for i in 1:size(re.xNames,1) loop Modelica.Utilities.Streams.print(re.xNames[i], "xNames_Case900LineariseInputs.txt"); end for;
// Re-add CPU
OutputCPUtime:=true;
// --------------- Simulate and plot model --------------------------------
simulateModel("IDEAS.LIDEAS.Validation.Case900ValidationLinearInputs", startTime=0, method="dassl", tolerance=1e-6, stopTime=100000, resultFile="Case900ValidationLinearInputs");

